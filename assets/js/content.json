---
layout: null
---

{
{% for lang in site.data.translations._ %}"{{ lang[0] }}": [
{%- assign posts = site.posts | where: 'lang', lang[0] -%}
{% for item in posts %}{
	{%- if item.description -%}
		{%- assign description = item.description -%}
	{%- elsif item.layout == "post" -%}
		{%- assign description = item.excerpt | markdownify | strip_html | replace: '"', ' ' | normalize_whitespace -%}
	{%- else -%}
		{%- assign description = "" -%}
	{%- endif -%}

	"id": {{ forloop.index }},
	"url": "{{ item.url | relative_url }}",
	"title": "{{ item.title }}",
	"body": "{{ item.content | markdownify | strip_html | replace: '"', ' ' | normalize_whitespace | replace: '&gt;', '>' | replace: '&lt;', '<' | replace: '&amp;', '&' }}"
}{% unless forloop.last %},{% endunless %}{% endfor %}
]{% unless forloop.last %},{% endunless %}
{% endfor %}
}
